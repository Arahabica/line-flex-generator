{
  "name": "project-name",
  "version": "1.0.0",
  "description": "Nuxt.js, Vuetify and firebase project",
  "author": "Arahabica <r.sasage@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build:nuxt": "nuxt build",
    "build": "yarn clean;yarn build:nuxt;yarn copy:server; yarn copy:client # for Firebase",
    "deploy": "cd functions; yarn deploy",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .eslintignore .",
    "fix": "eslint --fix --ext .js,.vue --ignore-path .eslintignore .",
    "clean": "rm -rf {dist,.nuxt}",
    "copy:server": "rm -rf functions/.nuxt/; cp -R .nuxt/ functions/.nuxt",
    "copy:client": "mkdir dist;cp -R src/static/ dist/;cp -R .nuxt/dist dist/nuxt;",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@nuxtjs/vuetify": "^1.12.3",
    "axios": "^1.2.2",
    "firebase": "^9.15.0",
    "lodash": "^4.17.19",
    "nuxt": "^3.0.0",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.1.0",
    "stylus": "^0.59.0",
    "stylus-loader": "^7.1.0",
    "vuefire": "^3.0.0",
    "vuexfire": "^3.2.5"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^12.0.0",
    "@nuxtjs/eslint-module": "^3.1.0",
    "@vue/test-utils": "^2.2.7",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^29.3.1",
    "babel-preset-vue-app": "^2.0.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": ">=17.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": ">=27.2.0",
    "eslint-plugin-node": ">=8.0.1",
    "eslint-plugin-nuxt": ">=4.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": ">=6.1.1",
    "eslint-plugin-standard": ">=5.0.0",
    "eslint-plugin-vue": "^9.8.0",
    "firebase-tools": "^13.0.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^3.0.7"
  }
}
